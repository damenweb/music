<body>

    <div id="auth-screen" class="box">
        <h2>QUIZ <span>PLAYER</span></h2>
        <input type="text" id="username" placeholder="ЛОГИН">
        <input type="password" id="password" placeholder="ПАРОЛЬ">
        <button onclick="tryLogin()">ВОЙТИ</button>
    </div>

    <div id="game-screen" class="box hidden">
        <div id="pause-overlay"><h1>ПАУЗА</h1></div>
        
        <div class="header-info">
            <div class="track-num">TRACK <span id="track-val">--</span></div>
            <div id="display-name" class="user-badge"></div>
        </div>

        <div id="lvl-badge">READY</div>
        <div id="player-timer">00</div>
        
        <div id="status">Ожидайте начала раунда...</div>

        <div id="input-fields">
            <input type="text" id="pArtist" placeholder="Исполнитель / Группа">
            <input type="text" id="pSong" placeholder="Название песни">
            <button id="sendBtn" onclick="send()" disabled>ОТПРАВИТЬ ОТВЕТ</button>
            <button id="skipBtn" class="btn-skip" onclick="skip()" disabled>ПРОПУСТИТЬ ЭТАП</button>
        </div>

        <table class="score-table">
            <thead>
                <tr>
                    <th>Подсказка</th>
                    <th>Баллы (Арт/Песня)</th>
                    <th>Неточность</th>
                </tr>
            </thead>
            <tbody id="score-tbody">
                <tr id="row-0"><td>1. Hint</td><td id="row-0-pts">-</td><td id="row-0-k">-</td></tr>
                <tr id="row-1"><td>2. Hint</td><td id="row-1-pts">-</td><td id="row-1-k">-</td></tr>
                <tr id="row-2"><td>3. Hint</td><td id="row-2-pts">-</td><td id="row-2-k">-</td></tr>
            </tbody>
        </table>

        <div style="font-size: 10px; color: #444; margin-top: 15px;">
            Combo: +<span id="inf-cmb">0</span> баллов за полный ответ (Арт + Песня)
        </div>
        
        <button class="btn-skip" style="border:none; margin-top:20px" onclick="logout()">ВЫЙТИ</button>
    </div>

<script>
    const S_URL = 'https://gatadttzyeusozvkwvai.supabase.co';
    const S_KEY = 'sb_publishable_cwXp1mw42C6sDXoeszY8sw_lYrAAefY';
    const supabaseClient = supabase.createClient(S_URL, S_KEY);

    let myLogin = "";
    let localTimerId, currentLvlIndex = -1, currentSongNum = -1;
    let hasAnsweredThisSong = false, isSkippedThisLevel = false;

    window.onload = checkAuth;

    async function checkAuth() {
        const u = localStorage.getItem('quiz_user'), p = localStorage.getItem('quiz_pass');
        if (u && p) {
            const { data } = await supabaseClient.from('quiz_users').select('*').eq('username', u).eq('password', p).single();
            if (data) { myLogin = data.username; showGameScreen(); }
        }
    }

    async function tryLogin() {
        const u = document.getElementById('username').value, p = document.getElementById('password').value;
        const { data } = await supabaseClient.from('quiz_users').select('*').eq('username', u).eq('password', p).single();
        if (data) { 
            localStorage.setItem('quiz_user', u); localStorage.setItem('quiz_pass', p);
            myLogin = data.username; showGameScreen();
        } else alert("Ошибка входа");
    }

    function showGameScreen() {
        document.getElementById('auth-screen').classList.add('hidden');
        document.getElementById('game-screen').classList.remove('hidden');
        document.getElementById('display-name').innerText = myLogin;
        supabaseClient.channel('quiz_chat').track({ user: myLogin });
    }

    async function send() {
        if (hasAnsweredThisSong) return;
        const a = document.getElementById('pArtist').value.trim(), s = document.getElementById('pSong').value.trim();
        if(!a && !s) return;
        hasAnsweredThisSong = true;
        await submit("ANS", `${a} | ${s}`);
        document.getElementById('status').innerHTML = "ОТВЕТ ПРИНЯТ! ОЖИДАЙТЕ РЕЗУЛЬТАТОВ";
        document.getElementById('status').classList.remove('reveal-mode');
    }

    async function skip() {
        if (hasAnsweredThisSong || isSkippedThisLevel) return;
        isSkippedThisLevel = true;
        await submit("SKIP", "SKIP");
        document.getElementById('status').innerText = "ЭТАП ПРОПУЩЕН";
        toggleInputs(false);
    }

    async function submit(type, msg) {
        const lvlName = document.getElementById('lvl-badge').innerText;
        const fullName = `${lvlName} ${myLogin}`;
        await supabaseClient.from('quiz_chat').insert([{ player_name: fullName, message: msg }]);
        toggleInputs(false);
    }

    function toggleInputs(en) {
        document.getElementById('sendBtn').disabled = !en || hasAnsweredThisSong;
        document.getElementById('skipBtn').disabled = !en || hasAnsweredThisSong || isSkippedThisLevel;
        document.getElementById('pArtist').readOnly = !en || hasAnsweredThisSong;
        document.getElementById('pSong').readOnly = !en || hasAnsweredThisSong;
    }

    function logout() { localStorage.clear(); location.reload(); }

    const channel = supabaseClient.channel('quiz_chat');
    channel.on('broadcast', { event: 'sync_state' }, p => {
        const d = p.payload;
        document.getElementById('track-val').innerText = `${d.songNum}/${d.totalSongs || '?'}`;
        document.getElementById('lvl-badge').innerText = d.level;
        
        // Подсвечиваем текущий уровень в таблице
        currentLvlIndex = parseInt(d.level.replace(/\D/g, "")) - 1;
        document.querySelectorAll('#score-tbody tr').forEach((tr, idx) => {
            tr.className = (idx === currentLvlIndex) ? 'active-row' : '';
        });

        // Обновляем таблицу баллов (из настроек админа)
        if(d.points) {
            const pA = d.points.art, pS = d.points.sng, k = d.points.kArt || d.points.kSng || 0.5;
            const row = document.getElementById(`row-${currentLvlIndex}`);
            if(row) {
                document.getElementById(`row-${currentLvlIndex}-pts`).innerText = `${pA} / ${pS}`;
                document.getElementById(`row-${currentLvlIndex}-k`).innerText = `x${k}`;
            }
            document.getElementById('inf-cmb').innerText = d.points.cmb;
        }

        if (currentSongNum !== d.songNum) {
            currentSongNum = d.songNum; hasAnsweredThisSong = false;
            document.getElementById('pArtist').value = ""; document.getElementById('pSong').value = "";
            document.getElementById('status').innerText = "ПРИГОТОВЬТЕСЬ К НОВОМУ ТРЕКУ...";
            document.getElementById('status').classList.remove('reveal-mode');
        }
        isSkippedThisLevel = false; toggleInputs(false);
    })
    .on('broadcast', { event: 'game_paused' }, p => {
        document.getElementById('pause-overlay').style.display = p.payload.paused ? 'flex' : 'none';
    })
    .on('broadcast', { event: 'start_timer' }, p => {
        const sec = p.payload.sec;
        if (sec > 0) {
            if (!hasAnsweredThisSong) { 
                toggleInputs(true); 
                document.getElementById('status').innerText = "ВРЕМЯ ПОШЛО! СЛУШАЕМ..."; 
                document.getElementById('status').classList.remove('reveal-mode');
            }
            let left = sec;
            const el = document.getElementById('player-timer');
            clearInterval(localTimerId);
            localTimerId = setInterval(() => {
                left--; el.innerText = left < 10 ? '0'+left : left;
                if(left <= 0) { clearInterval(localTimerId); toggleInputs(false); }
            }, 1000);
        } else {
            // Если таймер 0, значит ответ раскрыт или этап закончен
            clearInterval(localTimerId); 
            document.getElementById('player-timer').innerText = "00"; 
            toggleInputs(false);
            
            // Если пришел пустой левел в таймере, это может быть сигнал Reveal
            if(p.payload.lvl === "" && currentSongNum > 0) {
                // Запрашиваем актуальное состояние, чтобы увидеть ответ (он придет в status-display админа)
            }
        }
    })
    .on('postgres_changes', { event: 'UPDATE', schema: 'public', table: 'quiz_state' }, payload => {
        // Когда админ раскрывает ответ, он попадает в quiz_state или меняется статус
        const data = payload.new;
        if (data) {
             // Здесь можно ловить статус REVEALED и показывать ответ
        }
    })
    .subscribe();

    // Слушаем изменения статуса напрямую от админа (через broadcast sync_state или отдельный эвент)
    // Чтобы мгновенно показать ответ игрокам:
    channel.on('broadcast', { event: 'reveal_answer' }, p => {
        const st = document.getElementById('status');
        st.innerText = "ОТВЕТ: " + p.payload.answer;
        st.classList.add('reveal-mode');
        document.getElementById('lvl-badge').innerText = "ROUND FINISHED";
        clearInterval(localTimerId);
        document.getElementById('player-timer').innerText = "--";
        toggleInputs(false);
    });

</script>
</body>
</html>
